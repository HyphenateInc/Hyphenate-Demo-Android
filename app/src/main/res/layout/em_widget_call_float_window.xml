<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/layout_call_voice"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:background="#fffff8f8"
        android:elevation="@dimen/em_dimen_8"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/em_ic_call_white_36dp"
            android:tint="@color/em_green_87"
            />
        <TextView
            android:id="@+id/text_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_call_duration_time"
            android:textColor="@color/em_green_87"
            android:textSize="@dimen/size_body"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_call_video"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:elevation="@dimen/em_dimen_8"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >
    </RelativeLayout>
</RelativeLayout>