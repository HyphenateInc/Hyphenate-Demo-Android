<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

  <LinearLayout
      android:layout_width="280dp"
      android:layout_height="218dp"
      android:background="@color/colorTextPrimary"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:layout_gravity="center">
    <io.agora.easeui.widget.EaseImageView
        android:id="@+id/img_contact_dialog_avatar"
        android:layout_width="@dimen/contact_dialog_avatar_size"
        android:layout_height="@dimen/contact_dialog_avatar_size"
        android:layout_marginTop="25dp"
        android:src="@drawable/ease_default_avatar" />

    <TextView
        android:id="@+id/text_contact_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_margin="@dimen/contact_dialog_txt_margin_top"
        android:textColor="@color/contact_name_color"
        android:textSize="@dimen/contact_name_size"
        android:text="@string/app_name"
        android:ellipsize="end" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_dialog_base_line_height"
        android:background="@color/base_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

      <ImageView
          android:id="@+id/img_contact_dialog_voice_call"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:layout_marginStart="35dp"
          android:src="@drawable/em_ic_call_white_24dp"
          android:tint="@color/header_text_color"
          android:visibility="gone" />

      <ImageView
          android:id="@+id/img_contact_dialog_send_message"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:src="@drawable/em_ic_send_message"
          android:tint="@color/header_text_color" />

      <ImageView
          android:id="@+id/img_contact_dialog_video_call"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:layout_marginEnd="35dp"
          android:src="@drawable/em_ic_videocam_white_24dp"
          android:tint="@color/header_text_color"
          android:visibility="gone" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>